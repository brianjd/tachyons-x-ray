{
  "manifest_version": 2,

  "name": "tachyons-debug-browser",
  "description": "Browser extension for tachyons-debug",
  "version": "1.0",

  "background": {
    "persistent": false,
    "scripts": ["index.js"]
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_security_policy": "object-src 'self' https://raw.githubusercontent.com/tachyons-css/tachyons-css.github.io/master/img/; script-src 'self'",

  "permissions": [
    "activeTab"
  ]
}
